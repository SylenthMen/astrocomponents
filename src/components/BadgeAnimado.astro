---
const { texto } = Astro.props;
const { enlace } = Astro.props;
---

<div class="container flex flex-col items-center justify-center transition-all">
  <a href={enlace} title="enlace" class="badge hover:scale-105 transition-all">
    <div class="badge-border"></div>
    <div class="badge-border"></div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="sparkles"
      ><path
        d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"
      ></path><path d="M5 3v4"></path><path d="M19 17v4"></path><path d="M3 5h4"
      ></path><path d="M17 19h4"></path></svg
    >
    <div class="divider"></div>
    <span class="badge-text capitalize">{texto} &rarr;</span>
  </a>
</div>

<style>
  .badge {
    position: relative;
    display: inline-flex;
    align-items: center;
    max-width: fit-content;
    padding: 0.375rem 1rem;
    border-radius: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #000;
    background-color: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(4px);
    box-shadow: inset 0 -8px 10px rgba(143, 223, 255, 0.12);
    transition: box-shadow 0.5s ease-out;
    text-decoration: none;
  }

  .badge:hover {
    box-shadow: inset 0 -5px 10px rgba(143, 223, 255, 0.25);
  }

  .badge-border {
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(
      to right,
      rgba(70, 255, 64, 0.5),
      rgba(156, 64, 255, 0.5),
      rgba(64, 255, 121, 0.5)
    );
    background-size: 300% 100%;
    animation: gradient 3s ease infinite;
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask-composite: subtract;
  }

  .sparkles {
    width: 1rem;
    height: 1rem;
  }

  .divider {
    width: 1px;
    height: 1rem;
    background-color: rgba(0, 0, 0, 0.2);
    margin: 0 0.5rem;
  }

  .badge-text {
    background: linear-gradient(to right, #ffaa40, #9c40ff, #ffaa40);
    background-size: 300% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: gradient 3s ease infinite;
  }

  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  svg {
    animation: changeColor 3s ease infinite;
  }

  @keyframes changeColor {
    0% {
      stroke: #9c40ff;
    }
    50% {
      stroke: #ffaa40;
    }
    100% {
      stroke: #9c40ff;
    }
  }

  @media (prefers-color-scheme: dark) {
    .badge {
      color: #fff;
      background-color: rgba(0, 0, 0, 0.4);
    }
  }
</style>
