---
const { title } = Astro.props;
const { description } = Astro.props;
const { image } = Astro.props;
const { cardStyle } = Astro.props;
const { titleStyle } = Astro.props;
const { descriptionStyle } = Astro.props;
---

<article
  class=`border-2 border-gray-200 rounded-lg p-4 shadow-md w-80 ${cardStyle}`
>
  <div>
    <img class="rounded-md" src={image} alt="Foto de perfil" />
  </div>
  <div>
    <h2 class=`${titleStyle}`>{title}</h2>
    <p class=`${descriptionStyle}`>
      {description}
    </p>
  </div>
</article>
