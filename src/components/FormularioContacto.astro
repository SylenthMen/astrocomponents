---
const { titleStyle = "text-white text-3xl font-bold mb-6 text-center" } =
  Astro.props;
const { titleFormulario = "Contactanos" } = Astro.props;
const { styleFormulario = "bg-white" } = Astro.props;
const { colorLabel = "text-white" } = Astro.props;
---

<div class=`rounded-2xl shadow-2xl p-8 w-full max-w-md ${styleFormulario}`>
  <h2 class=`${titleStyle}`>
    {titleFormulario}
  </h2>
  <form class="space-y-6">
    <div class="space-y-2">
      <label for="name" class=`text-sm font-medium ${colorLabel}`>Nombre</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
        placeholder="Tu nombre"
      />
    </div>
    <div class="space-y-2">
      <label for="email" class=`text-sm font-medium ${colorLabel}`>Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
        placeholder="tu@email.com"
      />
    </div>
    <div class="space-y-2">
      <label for="subject" class=`text-sm font-medium ${colorLabel}`
        >Asunto</label
      >
      <input
        type="text"
        id="subject"
        name="subject"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out"
        placeholder="Asunto de tu mensaje"
      />
    </div>
    <div class="space-y-2">
      <label for="message" class=`text-sm font-medium ${colorLabel}`
        >Mensaje</label
      >
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150 ease-in-out resize-none"
        placeholder="Tu mensaje aquÃ­..."></textarea>
    </div>
    <div>
      <button
        type="submit"
        class="w-full hover:animate-pulse flex justify-center py-3 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 ease-in-out transform hover:scale-105"
      >
        Enviar Mensaje
      </button>
    </div>
  </form>
</div>
